<%- include('partials/header.ejs')  %>

    <div class=" mt-4 md:h-[86vh] w-screen flex gap-4 justify-center md:justify-evenly items-start min-[900px]:items-center px-12">
        <div class="flex flex-col gap-3">
            <div class="flex justify-between items-center">
                <p class="text-lg">Dashboards</p>
                <div class="flex relative items-center">
                    <P class="text-lg"><%= option  %></P>
                    <box-icon name='chevron-down' class="cursor-pointer" id="drop"></box-icon>
                    <div class="absolute top-8 right-0 bg-white shadow-2xl border-1 border-gray-100 rounded-lg w-36 flex flex-col gap-2 p-1 dropdownDiv hidden">
                        <a href="/dashboard/facebook"><p class="hover:bg-gray-200 px-1 <%= option === 'Facebook'? 'bg-gray-200': ''  %> rounded-md cursor-pointer">Facebook</p></a>
                        <a href="/dashboard/linkedin"><p class="hover:bg-gray-200 px-1 <%= option === 'LinkedIn'? 'bg-gray-200': ''  %> rounded-md cursor-pointer">LinkedIn</p></a>
                        <a href="/dashboard/instagram"><p class="hover:bg-gray-200 px-1 <%= option === 'Instagram'? 'bg-gray-200': ''  %> rounded-md cursor-pointer">Instagram</p></a>
                        <a href="/dashboard/x"><p class="hover:bg-gray-200 px-1 <%= option === 'X'? 'bg-gray-200': ''  %> rounded-md cursor-pointer">X</p></a>    
                    </div>
                </div>
            </div>
            <div class="grid grid-cols-2 min-[900px]:grid-cols-4 grid-rows-2 min-[900px]:grid-rows-1 gap-5 shrink-0">
                <div class="bg-white rounded-md border-1 shadow-md h-10 flex items-center justify-start pl-2">Followers: 10k</div>
                <div class="bg-white rounded-md border-1 shadow-md flex items-center justify-start pl-2">Impressions: 100k</div>
                <div class="bg-white rounded-md border-1 shadow-md flex items-center justify-start pl-2">Reactions: 50k</div>
                <div class="bg-white rounded-md border-1 shadow-md flex items-center justify-start pl-2">Shares: 5k</div>
            </div>      
            <div class="grid grid-cols-2 grid-rows-4 min-[900px]:grid-rows-2  gap-5 min-[900px]:grid-cols-4 min-[900px]:w-[900px] w-[400px] min-[900px]:h-[500px] shrink-0">
                <div class="bg-white rounded-md border-1 shadow-md col-span-2 h-[200px] min-[900px]:h-auto">
                    <canvas id="myChart1" style="width:100%;max-width:700px"></canvas>
                </div>
                <div class="bg-white rounded-md border-1 shadow-md ">
                    <canvas id="myChart2" ></canvas>
                </div>
                <div class="bg-white rounded-md border-1 shadow-md"><canvas id="myChart3" ></canvas>Top content</div>
                <div class="bg-white rounded-md border-1 shadow-md col-span-2"><canvas id="myChart4" ></canvas>Audience location</div>
                <div class="bg-white rounded-md border-1 shadow-md"><canvas id="myChart5" ></canvas>Gender distribution</div>
                <div class="bg-white rounded-md border-1 shadow-md"><canvas id="myChart6" ></canvas>Age distribution</div>
            </div>
        </div>
        
    </div>
    <script>
        // Get the canvas element
        const ctx1 = document.getElementById('myChart1').getContext('2d');
        const ctx2 = document.getElementById('myChart2').getContext('2d');
        const ctx3 = document.getElementById('myChart3').getContext('2d');
        const ctx4 = document.getElementById('myChart4').getContext('2d');
        const ctx5 = document.getElementById('myChart5').getContext('2d');
        const ctx6 = document.getElementById('myChart6').getContext('2d');
        
            
        // Create a chart
        const myChart1 = new Chart(ctx1, {
            type: 'line', // Specify the type of chart (e.g., bar, line, pie)
            data: {
                labels: ['Label 1', 'Label 2', 'Label 3'],
                datasets: [{
                    label: 'Follower Growth',
                    data: [10, 20, 15],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                // Additional options (e.g., scales, tooltips, legends)
                responsive: true
            }
        });

        const myChart2 = new Chart(ctx2, {
            type: 'pie', // Specify the type of chart (e.g., bar, line, pie)
            data: {
                labels: ['Label 1', 'Label 2', 'Label 3'],
                datasets: [{
                    label: 'Content Distribution',
                    data: [10, 20, 15],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                // Additional options (e.g., scales, tooltips, legends)
                responsive: true
            }
        });

        // Create a chart
        const myChart3 = new Chart(ctx3, {
            type: 'pie', // Specify the type of chart (e.g., bar, line, pie)
            data: {
                labels: ['Video', 'Images', 'Texts'],
                datasets: [{
                    label: 'Top Content',
                    data: [10, 20, 15],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                // Additional options (e.g., scales, tooltips, legends)
                responsive: true
            }
        });

        // Create a chart
        const myChart4 = new Chart(ctx4, {
            type: 'bar', // Specify the type of chart (e.g., bar, line, pie)
            data: {
                labels: ['Africa', 'America', 'Europe', 'Asia', 'Australia'],
                datasets: [{
                    label: 'Audience Location',
                    data: [10, 20, 15, 5, 1],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                // Additional options (e.g., scales, tooltips, legends)
                responsive: true
            }
        });

        // Create a chart
        const myChart5 = new Chart(ctx5, {
            type: 'pie', // Specify the type of chart (e.g., bar, line, pie)
            data: {
                labels: ['Men', 'Women'],
                datasets: [{
                    label: 'Gender distribution',
                    data: [75, 25],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                // Additional options (e.g., scales, tooltips, legends)
                responsive: true
            }
        });

        // Create a chart
        const myChart6 = new Chart(ctx6, {
            type: 'pie', // Specify the type of chart (e.g., bar, line, pie)
            data: {
                labels: ['15-25', '25-50', '50+'],
                datasets: [{
                    label: 'Age distribution',
                    data: [10, 20, 15],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                // Additional options (e.g., scales, tooltips, legends)
                responsive: true
            }
        });
    </script>
