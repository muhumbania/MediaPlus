<%- include('partials/header.ejs')  %>
 
    <div class="flex flex-col py-8 justify-between sm:h-[92vh] items-start mt-8 sm:mt-0 justify-center sm:items-center text-black text-md">
        <div class="grid sm:grid-cols-2 sm:grid-rows-2 text-slate-500 gap-8 grid-cols-1 grid-rows-4">
            <%- include('partials/overview.ejs', { params: {
                title: 'Facebook',
                logo: 'facebook-circle',
                color: '#4267B2',
                subscribers: 5,
                impressions: 3,
                reactions: 1
            }}) %>

            <%- include('partials/overview.ejs', { params: {
                title: 'Instagram',
                logo: 'instagram-alt',
                color: '#8a3ab9',
                subscribers: 3,
                impressions: 2,
                reactions: 1
            }}) %>

            <%- include('partials/overview.ejs', { params: {
                title: 'LinkedIn',
                logo: 'linkedin-square',
                color: '#0e76a8',
                subscribers: 6,
                impressions: 7,
                reactions: 2
            }}) %>

            <%- include('partials/overview.ejs', { params: {
                title: 'X',
                logo: 'twitter',
                color: '#1DA1F2',
                subscribers: 8,
                impressions: 5,
                reactions: 3
            }}) %>

        </div>
        <p class=" text-gray-400">Muhumbania Â©copyright <%= new Date().getFullYear()  %></p>
    </div>

    <div class="h-screen w-screen flex justify-center items-center fixed top-0 bg-black z-10 opacity-75 hidden curtain">
    </div>

    <div class="h-screen w-screen flex justify-center items-center fixed top-0 z-20 hidden newPost">

        <form action="/post" method="POST">
            <div class="h-[400px] w-[500px] bg-white border-1 shadow-2xl rounded-md z-10 flex flex-col justify-evenly px-4 postForm">
                <div class="flex items-center justify-between h-14">
                    <div class="flex">
                        <box-icon name='facebook-circle' size="md" type='logo' color="#4267B2" ></box-icon>
                        <input type="checkbox" name="Facebook">
                    </div>
                    <div class="flex">
                        <box-icon name='instagram-alt' size="md" type='logo' color="#8a3ab9"></box-icon>
                        <input type="checkbox" name="Instagram">
                    </div>
                    <div class="flex">
                        <box-icon name='linkedin-square' size="md" type='logo' color="#0e76a8" ></box-icon>
                        <input type="checkbox" name="LinkedIn">
                    </div>
                    <div class="flex">
                        <box-icon name='twitter' size="md" type='logo' color="#1DA1F2"></box-icon>
                        <input type="checkbox" name="X">
                    </div>
                </div>
                <textarea type="text" name="postContent" placeholder="What's new ?" id="postContent" class="h-[250px] text-md outline-none resize-none"></textarea>
                <button class="flex items-center justify-center bg-gray-200 text-gray-300 text-lg font-medium h-10 rounded-md" id="postButton" type="submit">
                    Post
                </button>
            </div>
        </form>
    </div>


    <div class="fixed bottom-12 right-12 flex items-center cursor-pointer" id="startPost">
        <box-icon type='solid' name='plus-circle' size="lg" color="#3b82f6" class="md:hidden"></box-icon>
        <p class="bg-blue-400 py-2 px-2 rounded-md text-white hidden md:inline">Start a new post</p>
    </div>

<%- include('partials/footer.ejs')  %>